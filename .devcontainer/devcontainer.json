{
  "name": "Ubuntu Dev Container",
  "image": "mcr.microsoft.com/devcontainers/ubuntu:22.04",
  "postCreateCommand": "apt-get update && apt-get install -y nodejs npm yarn git curl",
  "remoteUser": "vscode",
  "features": {
    "node": "lts"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode"
      ]
    }
  }
}
